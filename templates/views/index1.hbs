            data: [{{kisaAikaJani}}]
        },{
            label:'{{toni}}',
            fill: false,
            borderColor: 'rgb(205,133,63)',
            data: [{{kisaAikaToni}}]
        }]
      },
      // Configuration options go here
      options: {
        scales: {
          yAxes: [{
            ticks: {
              reverse: true,
            }
          }]
        }
      }
  });

  var ctx = document.getElementById('myChartAika').getContext('2d');
  var chart = new Chart(ctx, {
